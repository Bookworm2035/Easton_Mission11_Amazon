@{
}
@model Book
<div class="card m-1 p-1">
    <h3>
        @Model.Title
        <span class="badge rounded-pill bg-primary text-white float-end"><small>$@Model.Price</small></span>
    </h3>
    <ul>
        <li>Author: @Model.Author</li>
        <li>Publisher: @Model.Publisher</li>
        <li>ISBN: @Model.Isbn</li>
        <li>@Model.Classification</li>
        <li>Pages: @Model.PageCount</li>
        @*  <@* li>Price: $@b.Price</li> *@
    </ul>

    <form id="@Model.BookId" method="post" asp-page="/Cart">
        <input type="hidden" asp-for="@Model.BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <button type="submit" class="btn-outline-success btn-sm float-end">Donate</button>
    </form>
    
</div>